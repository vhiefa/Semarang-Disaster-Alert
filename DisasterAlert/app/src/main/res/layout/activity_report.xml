<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/activity_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <ImageView
        android:padding="5dp"
        android:background="@drawable/rounded_edittext"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imgShow"/>

    <TextView
        android:textColor="#000000"
        android:gravity="center"
        android:id="@+id/reportByTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location"/>

        <TextView
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Location"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gettingloc"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_edittext"
        android:orientation="horizontal">

        <ProgressBar
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:layout_gravity="center"
            android:textStyle="italic"
            android:text="  Getting your current location..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_edittext"
        android:id="@+id/locTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_category"/>

    <TextView
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Category"/>

        </LinearLayout>
    <Spinner
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_edittext"
        android:layout_width="match_parent"
        android:id="@+id/kategoriSpn"
        android:layout_height="wrap_content"></Spinner>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_desc"/>


        <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="left"
            android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Description"/>
        </LinearLayout>

    <EditText
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_edittext"
        android:id="@+id/descriptionEdtTxt"
        android:layout_width="match_parent"
        android:textSize="14dp"
        android:gravity="top"
        android:layout_height="100dp" />

    <Button
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:id="@+id/sendBtn"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/color_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEND"/>

</LinearLayout>
</ScrollView>
